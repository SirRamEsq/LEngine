<?xml version="1.0" encoding="UTF-8"?>
<!-- Sprite width and height is used to calculate where the origin is-->
<sprite origin="center" width="18" height="32" transparentColor="ff00ff" textureName="LouieBald.png">
	<animation name="Stand" speed="1.0">
		<image x="18" y="0" w="18" h="32"/>
	</animation>

	<!-- animation sequence auto build an animation based on animation frames in a sequence on a texture-->
	<animationSequence name="Walk" speed="1.0" startX="0" startY="0" w="18" h="32" imgs="4"/>

	<animation name="Jump" speed="1.0">
		<image x="0"  y="32" w="18" h="32"/>
	</animation>

	<animation name="Roll" speed="1.0">
		<image x="18"  y="32" w="18" h="32"/>
	</animation>

	<animation name="WallSlide" speed="1.0">
		<image x="36"  y="32" w="18" h="32"/>
	</animation>

	<animation name="Climb" speed="1.0">
		<image x="0"  y="64" w="18" h="32"/>
		<image x="18" y="64" w="18" h="32"/>
	</animation>
</sprite>
